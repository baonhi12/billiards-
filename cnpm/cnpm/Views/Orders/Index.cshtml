@model IEnumerable<Order>

<h2>Danh sách đơn hàng</h2>

<table class="table">
    <tr>
        <th>Mã đơn</th>
        <th>Ngày đặt</th>
        <th>Tổng tiền</th>
        <th>Trạng thái</th>
        <th>Hành động</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.OrderDate?.ToShortDateString()</td>
            <td>@order.TotalPrice.ToString("N0") VNĐ</td>
            <td>@order.Status</td>
            <td>
                <a href="@Url.Action("Details", "Orders", new { id = order.OrderId })" class="btn btn-info">Chi tiết</a>
            </td>
        </tr>
    }
</table>
